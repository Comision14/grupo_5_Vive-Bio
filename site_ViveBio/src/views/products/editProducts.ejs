<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title : "Editar Producto" }) %>

    <body class="edit_product">
        <%- include('../partials/header') %>
            <main>
                <main>
                    <!-- <div class="edit_find">
                        <label for="">Buscar Producto</label>
                        <input type="text" style="padding:5px;">
                    </div> -->
                    <section class="add_container">
                        <h3>Editar Producto</h3>
                        <form action="/Products/update/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                            <article class="camps_container">
                                <div class="sub_container">
                                    <div class="add_form-box">
                                        <label for="name"><strong>Nombre</strong></label>
                                        <input value="<%= product.name %>" class="add_input" type="text" id="name" name="name" style="padding:5px;">
                                    </div>
                                    <div class="add_form-box">
                                        <label for="image"><strong>Imagen</strong></label>
                                        <input class="add_input" type="file" id="image"  value="<%= product.image %> " name="image" multiple>
                                    </div>
                                    <div class="add_form-box">
                                        <label for="category"><strong>Categoría</strong></label>
                                        <select name="category" id="category">
                                            <option value="" hidden >Selecciona la categoría...</option>
                                            <option value="<%= product.category %>"  selected>1</option>
                                            <option value="2">2</option>


                                        </select>
                                    </div>
                                    <div class="add_form-box">
                                        <label for="price"><strong>Precio</strong></label>
                                        <input value="<%= product.price %>" class="add_input" type="number" id="price" name="price" style="padding:5px;">
                                    </div>
                                </div>
                                <div>
                                    <div class="add_form-box-description">
                                        <label for="description"><strong>Descripción</strong></label>
                                        <textarea class="add_input" type="text" id="description" name="description" rows="3" cols="35"
                                            style="resize: none; padding:5px;"><%= product.description.trim() %></textarea>
                                    </div>
                                </div>
                            </article>
                            </div>
                            </div>
                            <div class="register_center">

                                <div class="add_button">
                                    <button type="submit">Actualizar</button>
                                    <button type="reset">Limpiar</button>
                                </div>
                            </div>
                        </form>
                    </section>
                </main>
            </main>
            <%- include('../partials/footer') %>
    </body>

</html>
